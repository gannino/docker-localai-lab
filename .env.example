# Admin credentials
USERNAME=admin
PASSWORD=change-me

# Database
POSTGRES_PASSWORD=change-me

# Language and Localization
LANGUAGE=en
LOCALE=en_US.UTF-8
LANG=en_US.UTF-8
LC_ALL=en_US.UTF-8

# LDAP (JumpCloud)
LDAP_URL="ldap://ldap.jumpcloud.com"
LDAP_PORT="389"
LDAP_BASEDN="ou=Users,o=YOUR_ORG_ID,dc=jumpcloud,dc=com"
LDAP_ATTRIBUTE="uid"

# Domain configuration
DOMAIN_NAME=example.com
SUBDOMAIN=app
GENERIC_TIMEZONE=UTC
SSL_EMAIL=admin@example.com
CERT_RESOLVER=le-dns

# Hurricane Electric DNS
HURRICANE_TOKENS_PASSWORD=change-me

# Traefik Configuration
HTTP_PORT=80
HTTPS_PORT=443
TRAEFIK_DASHBOARD_PORT=8080
HTTP_ENTRYPOINT=http
HTTPS_ENTRYPOINT=https

# Ollama Configuration
SOCAT_PORT=8081
OLLAMA_INTERNAL_PORT=12434
OLLAMA_EXTERNAL_PORT=11434

# N8N Configuration
N8N_ENCRYPTION_KEY=change-me-to-random-32-char-hex

# WebUI Configuration
WEBUI_AUTH=true
ENABLE_OPENAI_API=true
ENABLE_OLLAMA_API=false
OPENAI_API_KEY=not-needed
WEBUI_SECRET_KEY=change-me-to-random-32-char-hex
ENABLE_SIGNUP=false
DEFAULT_USER_ROLE=user
ENABLE_COMMUNITY_SHARING=false
ENABLE_MESSAGE_RATING=true

# Computed domain for services
DOMAIN=${SUBDOMAIN}.${DOMAIN_NAME}
TRAEFIK_IMAGE=traefik:latest
PORTAINER_IMAGE=portainer/portainer-ce:latest
POSTGRES_IMAGE=postgres:15
N8N_IMAGE=docker.n8n.io/n8nio/n8n:latest
NODERED_IMAGE=nodered/node-red:latest
CODEPROJECTAI_IMAGE=codeproject/ai-server:latest
MCP_GATEWAY_IMAGE=docker/mcp-gateway:latest
NGINX_IMAGE=nginx:alpine
SOCAT_IMAGE=alpine/socat:latest
ECHO_IMAGE=mpolden/echoip:latest
HTTPENV_IMAGE=bretfisher/httpenv:latest
WEBUI_IMAGE=ghcr.io/open-webui/open-webui:main

# MCP Configuration
MCP_SERVERS=${MCP_SERVERS:-duckduckgo,google-flights,playwright}
